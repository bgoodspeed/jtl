{
  "mappings": [
    {
      "src": ".[] | .Arn",
      "dst": ".finding.affected_entities"
    },
    {
      "src": "$ctx.preamble + ([.[].Type] | first) + $ctx.suffix",
      "dst": ".finding.description",
      "mode": "replace"
    },
    {
      "src": "\"Issue: \" + ([.[].Type] | first)",
      "dst": ".finding.title",
      "mode": "replace"
    }
  ],
  "ctx": {
    "preamble": "Detected type: ",
    "suffix": " â€” please review."
  }
}